{
    "app-id" : "com.vysp3r.ProtonPlus",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "protonplus",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "ProtonPlus",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Vysp3r/ProtonPlus.git"
                }
            ]
        }
    ]
}
