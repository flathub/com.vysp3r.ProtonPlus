    "modules" : [
        {
            "name" : "ProtonPlus",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Vysp3r/ProtonPlus.git",
                    "tag": "v0.2.2",
