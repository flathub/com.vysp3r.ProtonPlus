{
    "app-id" : "com.vysp3r.ProtonPlus",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "protonplus",
    "only-arches": ["x86_64"],
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd"
    ],
    "modules" : [
        {
            "name" : "ProtonPlus",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Vysp3r/ProtonPlus.git",
                    "tag": "v0.1.3",
                    "commit": "546d3f1a34012de9895b3299efdc4543bccd79aa"
                }
            ]
        }
    ]
}
